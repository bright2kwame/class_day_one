<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:contentPadding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewCoinIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardBackgroundColor="@color/orange"
            app:cardCornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageViewIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@string/app_name"
            app:layout_constraintBottom_toBottomOf="@+id/cardViewCoinIcon"
            app:layout_constraintEnd_toEndOf="@+id/cardViewCoinIcon"
            app:layout_constraintStart_toStartOf="@+id/cardViewCoinIcon"
            app:layout_constraintTop_toTopOf="@+id/cardViewCoinIcon" />


        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewState"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:cardBackgroundColor="@color/orange"
            app:cardCornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:text="@string/app_name"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/cardViewState"
            app:layout_constraintStart_toEndOf="@+id/cardViewCoinIcon"
            app:layout_constraintTop_toTopOf="@+id/cardViewCoinIcon" />

        <TextView
            android:id="@+id/textViewSubTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/app_name"
            android:textStyle="normal"
            app:layout_constraintEnd_toStartOf="@+id/cardViewState"
            app:layout_constraintStart_toEndOf="@+id/cardViewCoinIcon"
            app:layout_constraintTop_toBottomOf="@+id/textViewTitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>